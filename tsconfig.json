{
    "compilerOptions": {
        "target": "ESnext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "skipLibCheck": true,
        "strictNullChecks": true,
        "isolatedModules": true,
        "noImplicitOverride": true,
        "paths": {
            "react": [
                "./node_modules/preact/compat/"
            ],
            "react-dom": [
                "./node_modules/preact/compat/"
            ],
        },
        "lib": [
            "ESNext",
            "DOM"
        ]
    },
    "include": [
        "node_modules/vite/client.d.ts",
        "src/**/*"
    ],
    "exclude": [
        "dist"
    ]
}
